# OpenAI API key for LLM evaluation
OPENAI_API_KEY=your_openai_api_key_here

# Spotify API credentials
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://127.0.0.1:8000/callback

# Optional - for vector storage if enabled
# PINECONE_API_KEY=your_pinecone_api_key_here
# PINECONE_ENVIRONMENT=your_pinecone_environment_here

# ===== EMAIL CONFIGURATION (Optional but recommended) =====
# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here

# Email settings
FROM_EMAIL=your-email@gmail.com
USER_EMAIL=recipient@example.com

# ===== HEROKU SCHEDULER CONFIGURATION =====
# Timezone for scheduling (optional)
TZ=America/New_York

# ===== ADVANCED FEATURES (Optional) =====
# Vector storage (if you want to enable it later)
# PINECONE_API_KEY=your_pinecone_api_key_here
# PINECONE_ENVIRONMENT=your_pinecone_environment_here

# Calendar integration (Google Calendar API - optional)
# GOOGLE_CALENDAR_CREDENTIALS=path_to_credentials.json
# GOOGLE_CALENDAR_ID=primary

# ===== DEBUGGING (Optional) =====
# Set to 'DEBUG' for more verbose logging
LOG_LEVEL=INFO

# Enable MCP debugging
MCP_DEBUG=false